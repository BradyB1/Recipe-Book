<%- include("includes/header") %>

    

  <form action="/login" method="POST" class="py-0">
    <h2 class="welcome-message d-flex justify-content-center pt-3 pb-0">Welcome Back!</h2>
    <div class="full-container py-0">
        <div class="login-container">
            <input type="text" name="username" class="form-control form-control-sm login-username-input" placeholder="Username" autocomplete="off">
            <input type="password" name="password" class="form-control form-control-sm login-password-input" placeholder="Password">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn btn-sm btn-primary me-4">Sign in</button>
        </div>
    </div>

  </form>
<%- include("includes/footer") %>